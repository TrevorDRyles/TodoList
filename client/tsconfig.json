{
  // this file is needed for react-scripts start
  "include":["./**/*.ts", "./**/*.tsx"],
  "exclude":["node_modules"],
  "compilerOptions": {
    "outDir": "./build",
    "module": "es6",
    "target": "es2020",
//    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true
  }
}
